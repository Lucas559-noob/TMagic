<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<!-- orb of conviction -->  
	
	  <TorannMagic.TMAbilityDef ParentName="BaseMagicAbility">
        <defName>TM_Artifact_Conviction</defName>
        <label>Convicção</label>
        <uiIconPath>UI/orb_conviction</uiIconPath>
		<manaCost>1.05</manaCost>
        <description>Vença um peão com convicção para se juntar à sua causa. Este poder irá cobrar um grande tributo ao lançador.

O uso da convicção destruirá o orbe.</description>
		<MainVerb Class="AbilityUser.VerbProperties_Ability">
            <verbClass>TorannMagic.Enchantment.Verb_OrbTraitor</verbClass>
				<tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
				<tooltipShowExtraDamages>false</tooltipShowExtraDamages>
				<tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
				<tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
            <hasStandardCommand>true</hasStandardCommand>
            <defaultProjectile>Projectile_Default</defaultProjectile>
            <abilityDef>TM_Artifact_Conviction</abilityDef>
            <warmupTime>2</warmupTime>
            <SecondsToRecharge>600</SecondsToRecharge>
            <range>50</range>
            <burstShotCount>1</burstShotCount>
            <soundCast>TM_Gong</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
            <muzzleFlashScale>30</muzzleFlashScale>
		    <AlwaysHits>true</AlwaysHits>
            <isPrimary>true</isPrimary>
			<isViolent>false</isViolent>
			<targetParams>
                <canTargetPawns>true</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetSelf>false</canTargetSelf>
                <canTargetLocations>false</canTargetLocations>
            </targetParams>
        </MainVerb>
    </TorannMagic.TMAbilityDef>
	
