<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	
	<!-- kickstart -->
	
	<ThingDef Name="RegrowthBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<label>recurso não especificado</label>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<tradeability>None</tradeability>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>1</stackLimit>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		    <li Class="CompProperties_Rottable">
			  <daysToRotStart>10</daysToRotStart>
			  <rotDestroys>true</rotDestroys>
		    </li>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

	<ThingDef ParentName="RegrowthBase">
		<defName>SeedofRegrowth</defName>
		<label>Semente de Recrescimento</label>
		<description>Uma semente exigida por um druida para iniciar o processo de regeneração do membro. Um druida deve ser treinado na arte da regeneração para usar este item mágico com sucesso.</description>
		<graphicData>
			<texPath>Items/SeedofRegrowth</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>10</stackLimit>
		<tickerType>Normal</tickerType>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<MarketValue>1</MarketValue>
			<Flammability>1.0</Flammability>
	        <Mass>0.6</Mass>
			<DeteriorationRate>200.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>TM_MagicItems</li>
		</thingCategories>
	</ThingDef>

</Defs>